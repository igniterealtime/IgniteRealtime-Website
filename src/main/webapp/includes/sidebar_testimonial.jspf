					<%--<div class="ignite_sidebar_body_quote">--%>
						<%--<p><%= quote.getText() %></p>--%>
					<%--</div>--%>
					<%--<div class="ignite_sidebar_body_attrib">--%>
						<%--&ndash; <%= quote.getAttribution() %>--%>
					<%--</div>--%>
				<%--</div>--%>
				<%--<div class="ignite_sidebar_btm"></div>--%>
			<%--</div>--%>
